<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
  </head>

  <body class="text-center">
    <h1 class="text-center mt-4">{{title}}</h1>
    <article>
      <form class="form-class">
        <input name="city" type="text" placeholder="Enter your city" />
        <button class="btn-css">
          <i class="fa fa-magnifying-glass"></i>
        </button>
      </form>
      <div class="text-light weather-total-div">
        <div class="text-light weather-details">
          <div class="temperature">
            <span>
            </span>
          </div>
          <div class="condition">
          </div>
        </div>
        <div class="mt-3 location"></div>
        <br />
        <div class="p-2 more-info">
          <p class="humidity"></p>
          <p class="wind"></p>
          <p class="pressure"></p>
          <p class="feels-like"></p>
        </div>
        <div class="date"></div>
      </div>
    </article>
    <script src="js/display.js" type="text/javascript"></script>
  </body>
</html>